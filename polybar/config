[module/date]
type = internal/date
interval = 1

date = %a
date-alt = %b %d
time = %R
format = <label>
format-foreground = ${colors.fg_module}
label =  %{T2}%date%%{T-} %{T2}%time%%{T-}

[module/filesystem]
type = internal/fs
mount-0 = /
format-mounted = <label-mounted>
format-unmounted = <label-unmounted>

fixed-values = true
